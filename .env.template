# ==========================================
# GenAI Configuration - Environment Variables
# ==========================================

# LLM Provider Selection
# Options: 'gemini' (default), 'openai', 'mock'
DEFAULT_LLM_PROVIDER=gemini

# ==========================================
# GEMINI PRO CONFIGURATION (DEFAULT)
# ==========================================
# Get API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-pro-api-key-here
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_OUTPUT_TOKENS=2048

# ==========================================
# OPENAI CONFIGURATION (BACKUP)
# ==========================================
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# ==========================================
# PDF PROCESSING
# ==========================================
PDF_UPLOAD_MAX_SIZE=52428800  # 50MB in bytes

# ==========================================
# OPTIONAL: CELERY/REDIS (for async tasks)
# ==========================================
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

