# GenAI Configuration File
# Copy this to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# Web Scraping Configuration
# Add your current affairs websites here
# CURRENT_AFFAIRS_MCQ_SOURCES=https://site1.com,https://site2.com
# CURRENT_AFFAIRS_DESC_SOURCES=https://site1.com,https://site2.com

# PDF Configuration
PDF_UPLOAD_PATH=./uploaded_pdfs
MAX_PDF_SIZE=52428800  # 50MB

# Celery Configuration (Optional)
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
